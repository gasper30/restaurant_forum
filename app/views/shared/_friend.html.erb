<% if user != current_user %>
  <% if current_user.friend?(user) %>
    <!-- 會用 DELETE 動作導向 http://localhost:3000/friendships/{user.id} -->
    <%= link_to 'Unfriend', friendship_path(user), method: :delete %>
  <% else %>
    <!-- 會用 POST 動作導向 http://localhost:3000/friendships?friend_id={user.id} -->
    <%= link_to 'Friend', friendships_path(frined_id: user), method: :post %>
  <% end %>
<% end %>